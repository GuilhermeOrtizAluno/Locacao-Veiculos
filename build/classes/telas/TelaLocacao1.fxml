<AnchorPane id="AnchorPane" prefHeight="287.0" prefWidth="260.0" styleClass="bg-primary" stylesheets="@../css/estilo.css" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controles.TelaLocacao1Controller">
   <children>
      <VBox prefHeight="310.0" prefWidth="260.0">
         <children>
            <StackPane prefHeight="67.0" prefWidth="239.0">
               <children>
                  <ImageView fitHeight="43.0" fitWidth="89.0" pickOnBounds="true" preserveRatio="true" StackPane.alignment="CENTER_RIGHT">
                     <image>
                        <Image url="@../imgs/logo.png" />
                     </image>
                  </ImageView>
                  <Label styleClass="titulo" text="Nova Locação" StackPane.alignment="CENTER_LEFT" />
               </children>
            </StackPane>
            <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="244.0" text="Selecionar Cliente" />
            <ComboBox fx:id="cbCondutor" disable="true" prefHeight="25.0" prefWidth="240.0" promptText="Selecionar Condutor">
               <VBox.margin>
                  <Insets bottom="7.0" top="7.0" />
               </VBox.margin>
            </ComboBox>
            <TextField fx:id="tfVeiculo" promptText="Insira o nome do veículo" />
            <Label text="Alugar por:">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
            <HBox prefHeight="34.0" prefWidth="240.0">
               <children>
                  <TextField fx:id="tdQtde" prefHeight="26.0" prefWidth="78.0" promptText="Quantidade">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </TextField>
                  <ComboBox fx:id="cbSemana" prefHeight="26.0" prefWidth="156.0" promptText="Diárias, semanas..." />
               </children>
               <VBox.margin>
                  <Insets bottom="7.0" top="7.0" />
               </VBox.margin>
            </HBox>
            <Button fx:id="bProsseguir" mnemonicParsing="false" onAction="#hundleProsseguir" prefHeight="32.0" prefWidth="284.0" text="Prosseguir">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Button>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
